<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nrupeshpatel.university.activity.faculty.AttendaceActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/toolbarContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_below="@id/toolbarContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:padding="10dp"
            android:textColor="@color/red"
            android:text="FUNDAMENTALS"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:paddingTop="5dp"
            android:paddingRight="20dp"
            android:drawableRight="@drawable/ic_light_green"
            android:paddingLeft="20dp"
            android:text="OOPS"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:paddingRight="20dp"
            android:drawableRight="@drawable/ic_light_green"
            android:paddingTop="5dp"
            android:paddingLeft="20dp"
            android:text="Software Engineering"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:paddingTop="5dp"
            android:paddingRight="20dp"
            android:drawableRight="@drawable/ic_light_green"
            android:paddingLeft="20dp"
            android:text="SQL Queries"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingRight="20dp"
            android:drawableRight="@drawable/ic_light_green"
            android:textSize="18sp"
            android:paddingLeft="20dp"
            android:text="Basics of Designing"/>

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:padding="10dp"
            android:textColor="@color/red"
            android:text="DATABASE CONNECTIVITY"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:paddingTop="5dp"
            android:paddingRight="20dp"
            android:drawableRight="@drawable/ic_light_green"
            android:paddingLeft="20dp"
            android:text="SQLite Database"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:paddingRight="20dp"
            android:drawableRight="@drawable/ic_light_green"
            android:paddingTop="5dp"
            android:paddingLeft="20dp"
            android:text="SQLite Data Types"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:paddingTop="5dp"
            android:paddingRight="20dp"
            android:drawableRight="@drawable/ic_light_red"
            android:paddingLeft="20dp"
            android:text="Cursors and Content Values"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingRight="20dp"
            android:drawableRight="@drawable/ic_light_red"
            android:textSize="18sp"
            android:paddingLeft="20dp"
            android:text="SQLite Open Helper"/>

