            android:drawableRight="@drawable/ic_light_red"
            android:textSize="18sp"
            android:paddingLeft="20dp"
            android:text="Using Bluetooth and NFC in Android"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingRight="20dp"
            android:drawableRight="@drawable/ic_light_red"
            android:textSize="18sp"
            android:paddingLeft="20dp"
            android:text="Localization in Android"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingRight="20dp"
            android:drawableRight="@drawable/ic_light_red"
            android:textSize="18sp"
            android:paddingLeft="20dp"
            android:text="Configuration Changes"/>

